{
  "name": "obd2-dashboard",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:services && npm run dev:stack",
    "dev:api": "npm run dev --workspace apps/dashboard-api",
    "dev:web": "npm run dev --workspace apps/dashboard-web",
    "dev:agent": "npm run dev --workspace apps/bridge-agent",
    "build": "npm run build --workspaces",
    "lint": "echo \"no lint configured\"",
    "test": "echo \"no tests configured\"",
    "test:rate-limit:signup": "node infra/scripts/test-rate-limit-signup.js",
    "test:rate-limit:password-reset": "node infra/scripts/test-rate-limit-password-reset.js",
    "test:rate-limit": "npm run test:rate-limit:signup && npm run test:rate-limit:password-reset",
    "test:crypto": "npm run test:crypto --workspace apps/dashboard-api",
    "test:control-plane": "node infra/scripts/test-control-plane.js",
    "test:ui": "npm run test --workspace packages/ui",
    "test:agent-renderer": "npm run test:renderer --workspace apps/bridge-agent",
    "test:bridge-agent:discovery": "npm run test:discovery --workspace apps/bridge-agent",
    "test:bridge-agent:control-ws": "npm run test:control-ws --workspace apps/bridge-agent",
    "test:bridge-agent:api": "npm run test:api --workspace apps/bridge-agent",
    "test:bridge-agent": "npm run test:bridge-agent:discovery && npm run test:bridge-agent:control-ws && npm run test:bridge-agent:api",
    "test:data-plane": "node infra/scripts/test-data-plane.js",
    "dev:stack": "node infra/scripts/dev-stack.js",
    "dev:services": "docker compose -f infra/docker-compose.dev.yml up -d",
    "dev:services:down": "docker compose -f infra/docker-compose.dev.yml down",
    "dev:redis": "docker compose -f infra/docker-compose.dev.yml up -d redis",
    "dev:redis:down": "docker compose -f infra/docker-compose.dev.yml stop redis",
    "e2e:up": "docker compose -f infra/docker-compose.e2e.yml up -d --build",
    "e2e:prepare": "node infra/scripts/e2e-wait.js && docker compose -f infra/docker-compose.e2e.yml exec -T api sh -c \"npx prisma migrate deploy --schema=prisma/schema.prisma && npx prisma db seed --schema=prisma/schema.prisma\"",
    "e2e:test": "npm run test --workspace apps/dashboard-e2e",
    "e2e:down": "docker compose -f infra/docker-compose.e2e.yml down"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "playwright": "^1.57.0",
    "prisma": "^5.22.0"
  }
}
